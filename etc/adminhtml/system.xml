<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="facebooktracking" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Facebook Tracking</label>
            <tab>sales</tab>
            <resource>Magento_Config::config</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>

                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Tracking</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="pixel_id" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Facebook Pixel ID</label>
                    <frontend_model>Hivecraft\FacebookTracking\Block\Adminhtml\System\Config\Form\NoAutoComplete</frontend_model>
                </field>

                <field id="access_token" translate="label" type="obscure" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Conversions API Access Token</label>
                    <frontend_model>Hivecraft\FacebookTracking\Block\Adminhtml\System\Config\Form\NoAutoComplete</frontend_model>
                </field>
            </group>
        </section>
    </system>
</config>
